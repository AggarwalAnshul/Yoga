<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apkglobal.yoga.Urdhva_Dhanurasana">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                style="@style/headings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ChakrAsan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


            <!--Stand still image-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/chakrasana" />


            <TextView
                style="@style/subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STEPS:" />
            <!--Steps:-->
            <TextView
                style="@style/normaltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/urdhva_dhanurasana" />


            <!--GIf-->
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/urdhva_dhanurasana" />


            <TextView
                style="@style/subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Benefits: " />

            <!--benfits-->
            <TextView
                style="@style/normaltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/urdhva_dhanurasana_benefits" />
        </LinearLayout>
    </ScrollView>

